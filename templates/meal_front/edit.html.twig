{% extends 'base.html.twig' %}

{% block title %}Edit Meal{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col">
    {# Top Navigation #}
    {% include 'components/top-nav.html.twig' %}

        <main class="flex-1 overflow-auto p-4 lg:p-6">
            <div class="max-w-3xl mx-auto">
                <div class="mb-6 flex items-center justify-between">
                    <h1 class="text-2xl font-bold text-gray-900">Edit Meal</h1>
                    <a href="{{ path('user_wellbeing_index') }}" class="text-gray-500 hover:text-gray-900 flex items-center gap-2">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>

                <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                    <div class="p-6 sm:p-8">
                         {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                            
                            <!-- Current Image Display -->
                            {% if meal.imageName %}
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Current Photo</label>
                                    <img src="{{ asset('uploads/meals/' ~ meal.imageName) }}" alt="Current Meal" class="h-48 object-cover rounded-lg shadow-sm border border-gray-200">
                                </div>
                            {% endif %}

                            <!-- Image Upload Section -->
                            <div x-data="{ imagePreview: null }">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Change Photo (Optional)</label>
                                
                                <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-xl hover:border-blue-500 transition-colors bg-gray-50 group relative">
                                    
                                    {{ form_widget(form.imageName, {
                                        'attr': {
                                            'class': 'absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10',
                                            '@change': 'imagePreview = URL.createObjectURL($event.target.files[0])'
                                        }
                                    }) }}

                                    <div class="space-y-1 text-center z-0 relative pointer-events-none">
                                        <div x-show="!imagePreview">
                                            <div class="mx-auto h-12 w-12 text-gray-400 group-hover:text-blue-500 transition-colors">
                                                <i class="fa-solid fa-cloud-arrow-up text-3xl"></i>
                                            </div>
                                            <div class="flex text-sm text-gray-600 justify-center mt-2">
                                                <span class="relative rounded-md font-medium text-blue-600 hover:text-blue-500">
                                                    <span>Upload a new file</span>
                                                </span>
                                            </div>
                                        </div>

                                        <div x-show="imagePreview" style="display: none;" class="relative">
                                            <img :src="imagePreview" class="mx-auto h-64 object-cover rounded-lg shadow-md" />
                                            <div class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1.5 shadow-sm z-20 pointer-events-auto cursor-pointer"
                                                 @click.stop="imagePreview = null; document.getElementById('{{ form.imageName.vars.id }}').value = ''">
                                                <i class="fa-solid fa-times text-xs"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                 <p class="text-red-500 text-sm mt-1">{{ form_errors(form.imageName) }}</p>
                            </div>

                            <!-- Description -->
                            <div>
                                 {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                 <div class="mt-1">
                                    {{ form_widget(form.description, {'attr': {'class': 'shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-3'}}) }}
                                 </div>
                                 <p class="text-red-500 text-sm mt-1">{{ form_errors(form.description) }}</p>
                            </div>

                            <!-- Submit -->
                            <div class="pt-4 border-t border-gray-100 flex items-center justify-end gap-4">
                                <a href="{{ path('user_wellbeing_index') }}" class="text-gray-600 hover:text-gray-900 text-sm font-medium">Cancel</a>
                                <button type="submit" class="inline-flex justify-center py-2.5 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all hover:scale-105">
                                    <i class="fa-solid fa-save mr-2"></i> Update Meal
                                </button>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </main>
</div>
{% endblock %}
