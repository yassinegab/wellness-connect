{% extends 'base.html.twig' %}

{% block title %}Hopital{% endblock %}

{% block body %}
    <h1>Hopital</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hopital.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ hopital.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ hopital.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ hopital.tel }}</td>
            </tr>
            <tr>
                <th>ServiceUrgenceDispo</th>
                <td>{{ hopital.serviceUrgenceDispo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ hopital.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ hopital.longitude }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ hopital.capacite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hopital_index') }}">back to list</a>

    <a href="{{ path('app_hopital_edit', {'id': hopital.id}) }}">edit</a>

    {{ include('hopital/_delete_form.html.twig') }}
