<header class="sticky top-0 z-30 flex h-16 items-center justify-between border-b border-gray-200 bg-white px-4 lg:px-6">
    
    <div class="flex items-center gap-4">
        {# Mobile Menu Toggle #}
        <button 
            type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-600 hover:bg-gray-100 lg:hidden"
            @click="sidebarOpen = !sidebarOpen">
            <i class="fas fa-bars text-xl"></i>
            <span class="sr-only">Ouvrir le menu</span>
        </button>
        
        <div class="relative hidden md:block">
    <form method="get" action="{{ path('user_wellbeing_index') }}">
        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
        <input
            type="search"
            name="search"
            value="{{ search|default('') }}"
            placeholder="Rechercher utilisateurs, RDV..."
            class="flex h-10 w-80 rounded-lg border border-gray-200 bg-gray-50 px-10 py-2 text-sm transition-all focus:bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
    </form>
</div>

    </div>
    
    <div class="flex items-center gap-3">
        
        {# Quick Stats #}
        <div class="hidden lg:flex items-center gap-4 mr-4">
            <div class="flex items-center gap-2 rounded-lg bg-blue-50 px-3 py-2">
                <i class="fas fa-users text-blue-600"></i>
                <span class="text-sm font-medium text-blue-900">{{ stats.totalUsers ?? '0' }}</span>
            </div>
            <div class="flex items-center gap-2 rounded-lg bg-orange-50 px-3 py-2">
                <i class="fas fa-clock text-orange-600"></i>
                <span class="text-sm font-medium text-orange-900">{{ stats.pendingAppointments ?? '0' }}</span>
            </div>
        </div>
        
        {# Notifications #}
        <div class="relative" x-data="{ open: false }" @click.away="open = false">
            <button 
                @click="open = !open"
                class="relative inline-flex h-10 w-10 items-center justify-center rounded-lg hover:bg-gray-100 transition-colors">
                <i class="fas fa-bell text-gray-600 text-lg"></i>
                <span class="absolute right-1 top-1 h-2.5 w-2.5 rounded-full bg-red-500 border-2 border-white"></span>
            </button>
            
            <div 
                x-show="open" 
                x-transition 
                class="absolute right-0 mt-2 w-80 origin-top-right rounded-lg border border-gray-200 bg-white shadow-lg z-50">
                <div class="p-4 border-b border-gray-200">
                    <h3 class="text-sm font-semibold text-gray-900">Notifications (3)</h3>
                </div>
                
                <div class="divide-y divide-gray-100">
                    <div class="p-4 hover:bg-gray-50 cursor-pointer transition-colors">
                        <div class="flex gap-3">
                            <div class="flex-shrink-0">
                                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                    <i class="fas fa-user-plus text-blue-600"></i>
                                </div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-gray-900">Nouvel utilisateur</p>
                                <p class="text-xs text-gray-600 mt-1">Marie Dupont vient de s'inscrire</p>
                                <p class="text-xs text-gray-400 mt-1">Il y a 5 min</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="p-4 hover:bg-gray-50 cursor-pointer transition-colors">
                        <div class="flex gap-3">
                            <div class="flex-shrink-0">
                                <div class="h-10 w-10 rounded-full bg-orange-100 flex items-center justify-center">
                                    <i class="fas fa-calendar text-orange-600"></i>
                                </div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-gray-900">Nouveau rendez-vous</p>
                                <p class="text-xs text-gray-600 mt-1">RDV en attente de confirmation</p>
                                <p class="text-xs text-gray-400 mt-1">Il y a 15 min</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="p-4 hover:bg-gray-50 cursor-pointer transition-colors">
                        <div class="flex gap-3">
                            <div class="flex-shrink-0">
                                <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                                    <i class="fas fa-check text-green-600"></i>
                                </div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-gray-900">Consultation terminée</p>
                                <p class="text-xs text-gray-600 mt-1">Dr. Martin a validé le RDV</p>
                                <p class="text-xs text-gray-400 mt-1">Il y a 1h</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="p-3 border-t border-gray-200 text-center">
                    <a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-700">
                        Voir toutes les notifications
                    </a>
                </div>
            </div>
        </div>
        
        {# Admin Profile #}
        <div class="relative" x-data="{ open: false }" @click.away="open = false">
            <button 
                @click="open = !open"
                class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="h-9 w-9 rounded-full bg-gradient-to-br from-blue-600 to-purple-600 flex items-center justify-center text-white font-semibold text-sm">
                    AD
                </div>
                <div class="hidden md:block text-left">
                    <p class="text-sm font-medium text-gray-900">Admin</p>
                    <p class="text-xs text-gray-500">Administrateur</p>
                </div>
                <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
            </button>
            
            <div 
                x-show="open" 
                x-transition 
                class="absolute right-0 mt-2 w-56 origin-top-right rounded-lg border border-gray-200 bg-white shadow-lg z-50">
                <div class="p-3 border-b border-gray-200">
                    <p class="text-sm font-medium text-gray-900">Administrateur</p>
                    <p class="text-xs text-gray-500">admin@smarthealth.ai</p>
                </div>
                
                <div class="p-2">
                    <a href="#" class="flex items-center gap-3 rounded-md px-3 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <i class="fas fa-user-circle text-gray-500"></i>
                        Mon profil
                    </a>
                    <a href="#" class="flex items-center gap-3 rounded-md px-3 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <i class="fas fa-cog text-gray-500"></i>
                        Paramètres
                    </a>
                    <a href="#" class="flex items-center gap-3 rounded-md px-3 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <i class="fas fa-question-circle text-gray-500"></i>
                        Support
                    </a>
                </div>
                
                <div class="p-2 border-t border-gray-200">
                    <a href="#" class="flex items-center gap-3 rounded-md px-3 py-2 text-sm text-red-600 hover:bg-red-50">
                        <i class="fas fa-sign-out-alt"></i>
                        Déconnexion
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</header>
