{% extends 'base.html.twig' %}

{% block title %}Modifier Hôpital #{{ hopital.id }} - Admin{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-50" x-data="{ sidebarOpen: false }">

    {# Sidebar Admin #}
    {% include 'admin/components/sidebar.html.twig' %}

    <div class="flex flex-1 flex-col lg:ml-64">

        {# Top Nav #}
        {% include 'admin/components/top-nav.html.twig' %}

        <main class="flex-1 overflow-auto">
            <div class="mx-auto max-w-4xl space-y-6 p-4 lg:p-8">

                {# Header #}
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">
                            <i class="fas fa-hospital text-blue-600 mr-2"></i>
                            Modifier Hôpital #{{ hopital.id }}
                        </h1>
                        <p class="text-gray-600 mt-2">
                            Modifiez les informations de l’hôpital
                        </p>
                    </div>

                    <a href="{{ path('admin_rendez_vous_index') }}"
                       class="px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300">
                        <i class="fas fa-arrow-left mr-2"></i>Retour
                    </a>
                </div>

                {# Flash messages #}
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg flex gap-2">
                        <i class="fas fa-check-circle"></i>
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg flex gap-2">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ message }}
                    </div>
                {% endfor %}

                {# Info actuelle #}
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <h3 class="font-semibold text-blue-900 mb-2">
                        Informations actuelles
                    </h3>
                    <p class="text-sm text-blue-800">
                        <strong>Nom :</strong> {{ hopital.nom }} <br>
                        <strong>Adresse :</strong> {{ hopital.adresse }} <br>
                        <strong>Téléphone :</strong> {{ hopital.tel }}
                    </p>
                </div>

                {# Formulaire #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                    {{ form_start(form, {
                        attr: {
                            class: 'space-y-6',
                            novalidate: 'novalidate'
                        }
                    }) }}

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        {# Nom #}
                        <div>
                            {{ form_label(form.nom, 'Nom', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.nom, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        {# Téléphone #}
                        <div>
                            {{ form_label(form.tel, 'Téléphone', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.tel, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.tel) }}
                        </div>

                        {# Adresse #}
                        <div class="md:col-span-2">
                            {{ form_label(form.adresse, 'Adresse', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.adresse, {
                                attr: {
                                    class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50',
                                    rows: 3
                                }
                            }) }}
                            {{ form_errors(form.adresse) }}
                        </div>

                        {# Capacité #}
                        <div>
                            {{ form_label(form.capacite, 'Capacité (lits)', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.capacite, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.capacite) }}
                        </div>

                        {# Urgences #}
                        <div>
                            {{ form_label(form.serviceUrgenceDispo, 'Service d’urgence', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.serviceUrgenceDispo, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.serviceUrgenceDispo) }}
                        </div>

                        {# Latitude #}
                        <div>
                            {{ form_label(form.latitude, 'Latitude', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.latitude, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.latitude) }}
                        </div>

                        {# Longitude #}
                        <div>
                            {{ form_label(form.longitude, 'Longitude', {
                                label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' }
                            }) }}
                            {{ form_widget(form.longitude, {
                                attr: { class: 'w-full px-4 py-2.5 border rounded-lg bg-gray-50' }
                            }) }}
                            {{ form_errors(form.longitude) }}
                        </div>

                    </div>

                    {# Boutons #}
                    <div class="flex gap-4 pt-6 border-t">
                        <a href="{{ path('admin_rendez_vous_index') }}"
                           class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-semibold">
                            <i class="fas fa-times mr-2"></i>Annuler
                        </a>

                        <button type="submit"
                                class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700">
                            <i class="fas fa-save mr-2"></i>Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>

            </div>
        </main>

    </div>
</div>
{% endblock %}
