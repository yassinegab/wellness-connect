{% extends 'base.html.twig' %}

{% block title %}Modifier Rendez-vous #{{ rendez_vous.id }} - Admin{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-50" x-data="{ sidebarOpen: false }">

    {# Admin Sidebar #}
    {% include 'admin/components/sidebar.html.twig' %}

    <div class="flex flex-1 flex-col lg:ml-64">

        {# Admin Top Nav #}
        {% include 'admin/components/top-nav.html.twig' %}

        <main class="flex-1 overflow-auto">
            <div class="mx-auto max-w-4xl space-y-6 p-4 lg:p-8">

                {# Header #}
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">
                            <i class="fas fa-edit text-green-600 mr-2"></i>
                            Modifier Rendez-vous #{{ rendez_vous.id }}
                        </h1>
                        <p class="text-gray-600 mt-2">Modifiez les informations du rendez-vous</p>
                    </div>
                    <a href="{{ path('admin_rendez_vous_index') }}" 
                       class="px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Retour
                    </a>
                </div>

                {# Messages Flash #}
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fadeIn">
                        <i class="fas fa-check-circle"></i>
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg flex items-center gap-2 animate-fadeIn">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ message }}
                    </div>
                {% endfor %}

                {# Info card du rendez-vous actuel #}
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle text-blue-600 text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-blue-900 mb-1">Informations actuelles</h3>
                            <div class="text-sm text-blue-800 space-y-1">
                                <p><strong>Patient:</strong> {{ rendez_vous.patient ? rendez_vous.patient.nom ~ ' ' ~ rendez_vous.patient.prenom : 'Non assigné' }}</p>
                                <p><strong>Médecin:</strong> {{ rendez_vous.medecin ? 'Dr. ' ~ rendez_vous.medecin.nom : 'Non assigné' }}</p>
                                <p><strong>Date:</strong> {{ rendez_vous.dateRendezVous|date('d/m/Y à H:i') }}</p>
                                <p><strong>Statut:</strong> {{ rendez_vous.statut }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Formulaire #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                    {{ form_start(form, {
                        'attr': {
                            'class': 'space-y-6',
                            'novalidate': 'novalidate'
                        }
                    }) }}
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {# Patient #}
                        <div>
                            {{ form_label(form.patient, 'Patient', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.patient, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.patient) }}
                            </div>
                        </div>

                        {# Médecin #}
                        <div>
                            {{ form_label(form.medecin, 'Médecin', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.medecin, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.medecin) }}
                            </div>
                        </div>

                        {# Hôpital #}
                        <div>
                            {{ form_label(form.hopital, 'Hôpital', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.hopital, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.hopital) }}
                            </div>
                        </div>

                        {# Date du rendez-vous #}
                        <div>
                            {{ form_label(form.dateRendezVous, 'Date et heure', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.dateRendezVous, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.dateRendezVous) }}
                            </div>
                        </div>

                        {# Type de consultation #}
                        <div>
                            {{ form_label(form.typeConsultation, 'Type de consultation', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.typeConsultation, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.typeConsultation) }}
                            </div>
                        </div>

                        {# Statut #}
                        <div>
                            {{ form_label(form.statut, 'Statut', {
                                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                            }) }}
                            {{ form_widget(form.statut, {
                                'attr': {
                                    'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50'
                                }
                            }) }}
                            <div class="text-red-600 text-sm mt-1">
                                {{ form_errors(form.statut) }}
                            </div>
                        </div>
                    </div>

                    {# Notes #}
                    <div>
                        {{ form_label(form.notes, 'Notes (facultatif)', {
                            'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                        }) }}
                        {{ form_widget(form.notes, {
                            'attr': {
                                'class': 'w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-gray-50',
                                'rows': 4,
                                'placeholder': 'Ajoutez des notes ou observations...'
                            }
                        }) }}
                        <div class="text-red-600 text-sm mt-1">
                            {{ form_errors(form.notes) }}
                        </div>
                    </div>

                    {# Boutons d'action #}
                    <div class="flex gap-4 pt-4 border-t border-gray-200">
                        <a href="{{ path('admin_rendez_vous_index') }}" 
                           class="px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors">
                            <i class="fas fa-times mr-2"></i>
                            Annuler
                        </a>
                        <button type="submit" 
                                class="flex-1 px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-all transform hover:scale-105 shadow-md">
                            <i class="fas fa-save mr-2"></i>
                            Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>

            </div>
        </main>

    </div>
</div>

<style>
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fadeIn {
    animation: fadeIn 0.3s ease-out;
}
</style>
{% endblock %}