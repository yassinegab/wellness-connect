{% extends 'base.html.twig' %}

{% block title %}Admin - Rendez-vous et Hôpitaux{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-50" x-data="{ sidebarOpen: false }">

    {# Sidebar Admin #}
    {% include 'admin/components/sidebar.html.twig' %}

    <div class="flex flex-1 flex-col lg:ml-64">

        {# Top Navigation Admin #}
        {% include 'admin/components/top-nav.html.twig' %}

        <main class="flex-1 overflow-auto">
            <div class="mx-auto max-w-7xl space-y-6 p-4 lg:p-8">

                {# Header #}
                <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">
                            <i class="fas fa-cogs text-blue-600 mr-2"></i>
                            Administration Médicale
                        </h1>
                        <p class="text-gray-600 mt-2">
                            Gestion complète des rendez-vous et hôpitaux
                        </p>
                    </div>
                </div>

                {# Flash Messages #}
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
                        <i class="fas fa-check-circle mr-2"></i>{{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
                        <i class="fas fa-exclamation-circle mr-2"></i>{{ message }}
                    </div>
                {% endfor %}

                {# Barre de recherche #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                    <form method="get" class="flex flex-col md:flex-row gap-4">
                        <div class="flex-1">
                            <input type="text"
                                   name="q"
                                   value="{{ search|default('') }}"
                                   placeholder="Rechercher un rendez-vous, patient, médecin ou hôpital..."
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>

                        <div>
                            <select name="filter"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="all" {{ filter == 'all' ? 'selected' : '' }}>
                                    Tous
                                </option>
                                <option value="rdv" {{ filter == 'rdv' ? 'selected' : '' }}>
                                    Rendez-vous
                                </option>
                                <option value="hopital" {{ filter == 'hopital' ? 'selected' : '' }}>
                                    Hôpitaux
                                </option>
                            </select>
                        </div>

                        <div class="flex gap-2">
                       
                            {% if search %}
                                <a href="{{ path('admin_rendez_vous_index') }}" class="px-6 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors">
                                    <i class="fas fa-times mr-2"></i>
                                    Réinitialiser
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>

                {# Statistiques #}
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-clock text-yellow-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">RDV En attente</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|filter(rdv => rdv.statut == 'En attente')|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-check text-green-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">RDV Confirmés</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|filter(rdv => rdv.statut == 'Confirmé')|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-hospital text-purple-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Hôpitaux</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ hopitaux|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-calendar-alt text-blue-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Total RDV</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|length }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                {# SECTION HÔPITAUX #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-purple-50 to-blue-50">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-hospital text-white text-xl"></i>
                                </div>
                                <div>
                                    <h2 class="text-2xl font-bold text-gray-900">Gestion des Hôpitaux</h2>
                                    <p class="text-sm text-gray-600">CRUD complet des établissements médicaux</p>
                                </div>
                            </div>
                            <a href="{{ path('admin_hopital_new') }}" class="px-4 py-2 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition-colors shadow-md">
                                <i class="fas fa-plus mr-2"></i>
                                Nouvel Hôpital
                            </a>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Adresse</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Téléphone</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Capacité</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Urgences</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for hopital in hopitaux %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#{{ hopital.id }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <i class="fas fa-hospital text-purple-600 mr-2"></i>
                                            {{ hopital.nom }}
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">
                                            <i class="fas fa-map-marker-alt text-red-500 mr-1"></i>
                                            {{ hopital.adresse }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <i class="fas fa-phone text-green-500 mr-1"></i>
                                            {{ hopital.tel }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <i class="fas fa-bed text-blue-500 mr-1"></i>
                                            {{ hopital.capacite }} lits
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if hopital.serviceUrgenceDispo %}
                                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-check mr-1"></i>Disponible
                                                </span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-times mr-1"></i>Indisponible
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                            <a href="{{ path('admin_hopital_show', {'id': hopital.id}) }}" class="text-blue-600 hover:text-blue-900" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_hopital_edit', {'id': hopital.id}) }}" class="text-green-600 hover:text-green-900" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button onclick="confirmDeleteHopital({{ hopital.id }})" class="text-red-600 hover:text-red-900" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <form id="delete-hopital-form-{{ hopital.id }}" method="post" action="{{ path('admin_hopital_delete', {'id': hopital.id}) }}" style="display: none;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hopital.id) }}">
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="px-6 py-12 text-center">
                                            <i class="fas fa-hospital text-gray-300 text-6xl mb-4"></i>
                                            <p class="text-gray-500 text-lg">Aucun hôpital enregistré</p>
                                            <a href="{{ path('admin_hopital_new') }}" class="mt-4 inline-block px-6 py-3 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700">
                                                <i class="fas fa-plus mr-2"></i>Ajouter le premier hôpital
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# SECTION RENDEZ-VOUS #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-green-50">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                                <i class="fas fa-calendar-alt text-white text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-gray-900">Gestion des Rendez-vous</h2>
                                <p class="text-sm text-gray-600">Administration des consultations médicales</p>
                            </div>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Patient</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Médecin</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Hôpital</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for rdv in rendez_vous %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#{{ rdv.id }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.patient %}
                                                <i class="fas fa-user text-blue-500 mr-1"></i>
                                                {{ rdv.patient.nom }} {{ rdv.patient.prenom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.medecin %}
                                                <i class="fas fa-user-md text-green-500 mr-1"></i>
                                                Dr. {{ rdv.medecin.nom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.hopital %}
                                                <i class="fas fa-hospital text-purple-500 mr-1"></i>
                                                {{ rdv.hopital.nom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            <i class="fas fa-calendar text-orange-500 mr-1"></i>
                                            {{ rdv.dateRendezVous|date('d/m/Y H:i') }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if rdv.typeConsultation == 'Présentiel' %}
                                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">Présentiel</span>
                                            {% elseif rdv.typeConsultation == 'Téléconsultation' %}
                                                <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">Téléconsultation</span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">Urgence</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if rdv.statut == 'En attente' %}
                                                <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full">En attente</span>
                                            {% elseif rdv.statut == 'Confirmé' %}
                                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">Confirmé</span>
                                            {% elseif rdv.statut == 'Annulé' %}
                                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">Annulé</span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-semibold rounded-full">Terminé</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                            <a href="{{ path('admin_rendez_vous_show', {'id': rdv.id}) }}" class="text-blue-600 hover:text-blue-900"><i class="fas fa-eye"></i></a>
                                            <a href="{{ path('admin_rendez_vous_edit', {'id': rdv.id}) }}" class="text-green-600 hover:text-green-900"><i class="fas fa-edit"></i></a>
                                            <button onclick="confirmDelete({{ rdv.id }})" class="text-red-600 hover:text-red-900"><i class="fas fa-trash"></i></button>
                                            <form id="delete-form-{{ rdv.id }}" method="post" action="{{ path('admin_rendez_vous_delete', {'id': rdv.id}) }}" style="display: none;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="px-6 py-12 text-center">
                                            <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
                                            <p class="text-gray-500 text-lg">Aucun rendez-vous</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </main>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
<script>
function confirmDelete(id) {
    if (confirm('Supprimer ce rendez-vous ?')) {
        document.getElementById('delete-form-' + id).submit();
    }
}

function confirmDeleteHopital(id) {
    if (confirm('Supprimer cet hôpital ? Cette action est irréversible.')) {
        document.getElementById('delete-hopital-form-' + id).submit();
    }
}
</script>
{% endblock %}