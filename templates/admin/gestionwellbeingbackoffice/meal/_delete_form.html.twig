<form method="post" action="{{ path('app_meal_delete', {'id': meal.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal.id) }}">
    <button type="submit"
        class="flex-1 text-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg shadow hover:bg-red-700 hover:scale-105 transform transition">
        Delete
    </button>
</form>
