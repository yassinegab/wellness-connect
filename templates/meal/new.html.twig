{% extends 'admin/base.html.twig' %}

{% block title %}Add Meal{% endblock %}

{% block body %}
<h1 class="text-2xl font-bold mb-6">Add New Meal</h1>

<div class="bg-white shadow-lg rounded-xl p-6 max-w-2xl">

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Image
            </label>
            {{ form_widget(form.imageName, {'attr': {'class': 'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.imageName) }}
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Description
            </label>
            {{ form_widget(form.description, {'attr': {'class': 'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">
                <i class="fas fa-robot text-gray-600"></i>
                AI Analysis
            </label>
            {{ form_widget(form.aiAnalysis, {'attr': {'class': 'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.aiAnalysis) }}
        </div>

        <div class="flex gap-3 mt-4">
            <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center gap-2">
                <i class="fas fa-save"></i>
                Save
            </button>

            <a href="{{ path('app_meal_index') }}"
               class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 flex items-center gap-2">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>
        </div>

    {{ form_end(form) }}

</div>
{% endblock %}
