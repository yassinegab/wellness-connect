{% extends 'base.html.twig' %}

{% block title %}Analyze Your Meal{% endblock %}

{% block body %}
<!-- Single column layout for better focus -->
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        
        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight sm:text-4xl">
                <i class="fa-solid fa-wand-magic-sparkles text-emerald-500 mr-2"></i>
                AI Meal Analysis
            </h1>
            <p class="mt-3 text-lg text-gray-500">
                Upload a photo of your meal. Our AI will analyze the nutrition and provide healthy feedback.
            </p>
        </div>

        <!-- Form Card -->
        <div class="bg-white py-8 px-4 shadow-xl sm:rounded-2xl sm:px-10 border border-gray-100">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

                <!-- Image Upload Section -->
                <div x-data="{ imagePreview: null }">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Meal Photo</label>
                    
                    <!-- Drag & Drop Zone -->
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-xl hover:border-emerald-500 transition-colors bg-gray-50 group relative">
                        
                         <!-- The actual input, invisible but covering the area -->
                        {{ form_widget(form.imageName, {
                            'attr': {
                                'class': 'absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10',
                                '@change': 'imagePreview = URL.createObjectURL($event.target.files[0])'
                            }
                        }) }}

                        <div class="space-y-1 text-center z-0 relative pointer-events-none">
                            
                            <!-- Upload Placeholder -->
                            <div x-show="!imagePreview">
                                <div class="mx-auto h-12 w-12 text-gray-400 group-hover:text-emerald-500 transition-colors">
                                    <i class="fa-solid fa-image text-3xl"></i>
                                </div>
                                <div class="flex text-sm text-gray-600 justify-center mt-2">
                                    <span class="relative rounded-md font-medium text-emerald-600 hover:text-emerald-500 focus-within:outline-none">
                                        <span>Upload a file</span>
                                    </span>
                                    <p class="pl-1">or drag and drop</p>
                                </div>
                                <p class="text-xs text-gray-500 mt-1">PNG, JPG, GIF up to 5MB</p>
                            </div>

                            <!-- Image Preview -->
                            <div x-show="imagePreview" style="display: none;" class="relative">
                                <img :src="imagePreview" class="mx-auto h-64 object-cover rounded-lg shadow-md" />
                                <div class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1.5 shadow-sm z-20 pointer-events-auto cursor-pointer"
                                     @click.stop="imagePreview = null; document.getElementById('{{ form.imageName.vars.id }}').value = ''">
                                    <i class="fa-solid fa-times text-xs"></i>
                                </div>
                            </div>

                        </div>
                    </div>
                     <p class="text-red-500 text-sm mt-1">{{ form_errors(form.imageName) }}</p>
                </div>

                <!-- Description Section -->
                <div>
                     {{ form_label(form.description, 'Description (Optional)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                     <div class="mt-1">
                        {{ form_widget(form.description, {'attr': {'class': 'shadow-sm focus:ring-emerald-500 focus:border-emerald-500 block w-full sm:text-sm border-gray-300 rounded-md p-3 transition-shadow', 'placeholder': 'E.g. Grilled chicken salad with avocado, no dressing...'}}) }}
                     </div>
                     <p class="text-gray-400 text-xs mt-1">Provide details for deeper AI insights.</p>
                     <p class="text-red-500 text-sm mt-1">{{ form_errors(form.description) }}</p>
                </div>

                <!-- Submit Button -->
                <div class="pt-2">
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all transform hover:scale-[1.02]">
                        <i class="fa-solid fa-wand-magic-sparkles mr-2 mt-0.5"></i> Analyze Meal
                    </button>
                </div>

                <div class="text-center">
                    <a href="{{ path('app_meal_index') }}" class="text-sm text-gray-500 hover:text-gray-900 font-medium">Cancel</a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
