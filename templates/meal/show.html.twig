{% extends 'base.html.twig' %}

{% block title %}Meal Analysis Result{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        
        <!-- Breadcrumb / Back -->
        <div class="mb-6">
            <a href="{{ path('app_meal_index') }}" class="text-gray-500 hover:text-gray-900 flex items-center gap-2 transition-colors">
                <i class="fa-solid fa-arrow-left"></i> Back to Meals
            </a>
        </div>

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            
            <div class="md:flex">
                <!-- Image Section (Left/Top) -->
                <div class="md:w-1/2 bg-gray-100 relative">
                    {% if meal.imageName %}
                        <img src="{{ asset('uploads/meals/' ~ meal.imageName) }}" alt="Meal" class="w-full h-96 md:h-full object-cover">
                    {% else %}
                        <div class="h-96 md:h-full flex items-center justify-center text-gray-400">
                            <div class="text-center">
                                <i class="fa-solid fa-image text-4xl mb-2"></i>
                                <p>No image available</p>
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
                         {% if meal.createAt %}
                            <p class="text-white text-sm font-medium opacity-90"><i class="fa-regular fa-clock mr-1"></i> {{ meal.createAt|date('F j, Y, g:i a') }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Content Section (Right/Bottom) -->
                <div class="md:w-1/2 p-8 flex flex-col">
                    
                    <div class="mb-6">
                        <h2 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-2">Description</h2>
                        <p class="text-gray-800 text-lg leading-relaxed border-l-4 border-emerald-500 pl-4 bg-emerald-50/50 py-2 rounded-r-md">
                            {{ meal.description|default('No description provided.') }}
                        </p>
                    </div>

                    <div class="flex-1">
                        <h2 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
                            <i class="fa-solid fa-robot text-indigo-500"></i> AI Analysis
                        </h2>
                        
                        <div class="prose prose-emerald text-gray-600 bg-gray-50 p-6 rounded-xl border border-gray-100 shadow-inner max-h-[500px] overflow-y-auto">
                            {% if meal.aiAnalysis %}
                                {{ meal.aiAnalysis|nl2br }}
                            {% else %}
                                <div class="text-center py-8 text-gray-400">
                                    <i class="fa-solid fa-hourglass-half mb-2"></i>
                                    <p>Analysis pending or unavailable.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="mt-8 pt-6 border-t border-gray-100 flex gap-3">
                         <a href="{{ path('app_meal_edit', {'id': meal.id}) }}" class="flex-1 bg-indigo-50 text-indigo-700 hover:bg-indigo-100 py-2 px-4 rounded-lg font-medium text-center transition-colors">
                            <i class="fa-solid fa-pen mr-1"></i> Edit
                        </a>
                        
                        {{ include('meal/_delete_form.html.twig') }}
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
