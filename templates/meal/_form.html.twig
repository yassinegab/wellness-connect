{{ form_start(form, {
    'attr': { 
        'novalidate': 'novalidate',
        'enctype': 'multipart/form-data',
        'class': 'space-y-6 bg-white p-6 rounded-2xl shadow-md border border-gray-200'
    }
}) }}

    {# Loop through each field to apply Tailwind styles #}
    {% for child in form %}
        <div class="flex flex-col">
            {{ form_label(child, null, {'label_attr': {'class': 'mb-1 text-gray-700 font-semibold'}}) }}
            {{ form_widget(child, {'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(child, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
        </div>
    {% endfor %}

    {# Submit button #}
    <button type="submit"
        class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 hover:scale-105 transform transition">
        {{ button_label|default('Save') }}
    </button>

{{ form_end(form) }}

