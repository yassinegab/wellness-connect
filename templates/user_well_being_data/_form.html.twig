<div class="max-w-3xl mx-auto bg-white shadow-sm rounded-lg p-6 space-y-6">

    <h1 class="text-2xl font-bold text-gray-900">
        {{ form.vars.value.id ? 'Edit User Well-Being Data' : 'Create New User Well-Being Data' }}
    </h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} 

    {% for field in form %}
        <div class="mb-4">
            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            
            {{ form_widget(field, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 sm:text-sm'
                }
            }) }}

            {# Display validation errors in red #}
            {% if field.vars.errors|length > 0 %}
                <ul class="mt-1 text-red-600 text-sm list-disc list-inside">
                    {% for error in field.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endfor %}

    <div class="flex gap-2 mt-4">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-white font-medium hover:bg-blue-700 transition">
            <i class="fas fa-save"></i> {{ button_label|default('Save') }}
        </button>

        <a href="{{ path('app_user_well_being_data_index') }}" 
           class="inline-flex items-center gap-2 rounded-lg bg-gray-200 px-4 py-2 text-gray-800 font-medium hover:bg-gray-300 transition">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    {{ form_end(form) }}
</div>
