{% extends 'base.html.twig' %}

{% block title %}Connexion - Sosi+{% endblock %}

{% block body %}
<div 
    class="relative min-h-screen flex items-center justify-center overflow-hidden bg-slate-50 py-12 px-4 sm:px-6 lg:px-8"
    x-data="{
        slides: [
            { url: '{{ asset('uploads/meals/6998f790cb5ad.jpg') }}', caption: 'Track your meals with AI analysis' },
            { url: '{{ asset('uploads/meals/6999edac4cc4c.jpg') }}', caption: 'Monitor your stress trends over time' },
            { url: '{{ asset('uploads/meals/6992c8433d882.jpg') }}', caption: 'Manage appointments and health records' },
        ],
        current: 0
    }"
    x-init="setInterval(() => current = (current + 1) % slides.length, 4500)"
>
    
    {# Logo Top Left #}
    <div class="absolute top-6 left-6 z-20 flex items-center gap-3">
        <img src="{{ asset('images/logo.png') }}" alt="Sosi+ Logo" class="h-10 w-10 rounded-xl shadow-md shadow-slate-300/50">
        <div class="text-slate-700 font-extrabold tracking-tight">Sosi+ HealthCare</div>
    </div>

    {# Background Slideshow #}
    <div class="absolute inset-0 z-0 overflow-hidden">
        <template x-for="(slide, idx) in slides" :key="idx">
            <div 
                class="absolute inset-0 transition-opacity duration-1000 ease-in-out"
                :class="current === idx ? 'opacity-80' : 'opacity-0'"
                :style="`background-image: url(${slide.url}); background-size: cover; background-position: center;`"
            >
                <div class="absolute inset-0 backdrop-blur-[6px] bg-white/30"></div>
            </div>
        </template>
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 bg-white/60 backdrop-blur px-4 py-2 rounded-full text-sm font-medium text-slate-700 shadow-md">
            <span x-text="slides[current].caption"></span>
        </div>
    </div>

    {# Background Elements #}
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-blue-400/20 blur-[100px] animate-pulse"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-indigo-400/20 blur-[100px] animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-[20%] right-[20%] w-[20%] h-[20%] rounded-full bg-teal-400/20 blur-[80px] animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    {# Main Card #}
    <div class="relative z-10 w-full max-w-md transform transition-all hover:scale-[1.01] duration-500">
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] border border-white/50 p-8 sm:p-10">
            
            {# Header #}
            <div class="text-center mb-10">
                <div class="flex justify-center mb-6">
                    <img src="{{ asset('images/logo.png') }}" alt="Sosi+ Logo" class="h-24 w-auto drop-shadow-lg transition-transform hover:scale-105 duration-300">
                </div>
                <h2 class="text-3xl font-bold tracking-tight text-slate-800 mb-2">Bon retour</h2>
                <p class="text-slate-500">
                    Gérez votre santé en toute simplicité
                </p>
            </div>

            {# Flash Messages #}
            {% if error is defined and error %}
                <div class="mb-6 rounded-xl bg-red-50/80 backdrop-blur-sm p-4 border border-red-100 flex items-start gap-3 animate-fadeIn">
                    <i class="fas fa-exclamation-circle text-red-500 mt-0.5"></i>
                    <div>
                        <h3 class="text-sm font-semibold text-red-800">Erreur de connexion</h3>
                        <p class="text-sm text-red-600 mt-1">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="mb-6 rounded-xl bg-green-50/80 backdrop-blur-sm p-4 border border-green-100 flex items-start gap-3 animate-fadeIn">
                    <i class="fas fa-check-circle text-green-500 mt-0.5"></i>
                    <p class="text-sm font-medium text-green-800">{{ message }}</p>
                </div>
            {% endfor %}

            {# Form #}
            <form action="{{ path('app_login') }}" method="post" class="space-y-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="space-y-5">
                    <div>
                        <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">Email</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-blue-600 text-slate-400">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <input id="email" name="_username" type="email" autocomplete="email" required 
                                   value="{{ last_username|default('') }}"
                                   class="block w-full pl-11 pr-4 py-3.5 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all shadow-sm"
                                   placeholder="exemple@email.com">
                        </div>
                    </div>

                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <label for="password" class="block text-sm font-semibold text-slate-700">Mot de passe</label>
                            <a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors">Oublié ?</a>
                        </div>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-blue-600 text-slate-400">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input id="password" name="_password" type="password" autocomplete="current-password" required 
                                   class="block w-full pl-11 pr-4 py-3.5 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all shadow-sm"
                                   placeholder="••••••••">
                        </div>
                    </div>
                </div>

                <div class="flex items-center">
                    <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500/50">
                    <label for="remember_me" class="ml-2 block text-sm text-slate-600 select-none">Se souvenir de moi</label>
                </div>

                <button type="submit" class="group relative w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl text-sm font-bold text-white bg-gradient-to-r from-rose-600 to-red-600 hover:from-rose-700 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-lg shadow-red-500/30 transition-all hover:shadow-red-500/40 hover:-translate-y-0.5">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fas fa-sign-in-alt text-red-100 group-hover:text-white transition-colors"></i>
                    </span>
                    Se connecter
                </button>
            </form>

            {# Footer #}
            <div class="mt-8 pt-6 border-t border-slate-100">
                <div class="relative flex justify-center text-sm">
                    <span class="bg-white/0 px-2 text-slate-500">
                        Pas encore de compte ? 
                        <a href="{{ path('app_register') }}" class="font-bold text-blue-600 hover:text-blue-500 transition-colors ml-1">
                            Créer un compte
                        </a>
                    </span>
                </div>
                
                <div class="mt-6 grid grid-cols-2 gap-4">
                    <a href="#" class="flex items-center justify-center gap-2 px-4 py-2.5 border border-slate-200 rounded-xl bg-white/50 hover:bg-white text-slate-600 hover:text-slate-900 transition-all shadow-sm hover:shadow-md">
                        <i class="fab fa-google text-red-500"></i>
                        <span class="text-sm font-medium">Google</span>
                    </a>
                    <a href="#" class="flex items-center justify-center gap-2 px-4 py-2.5 border border-slate-200 rounded-xl bg-white/50 hover:bg-white text-slate-600 hover:text-slate-900 transition-all shadow-sm hover:shadow-md">
                        <i class="fab fa-facebook text-blue-600"></i>
                        <span class="text-sm font-medium">Facebook</span>
                    </a>
                </div>
            </div>
        </div>
        
        {# Copyright #}
        <div class="mt-8 text-center text-xs text-slate-400">
            &copy; {{ "now"|date("Y") }} Sosi+ HealthCare. Tous droits réservés.
        </div>
    </div>
</div>
{% endblock %}
