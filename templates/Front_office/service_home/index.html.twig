{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Services{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-50">
    {# Sidebar #}
    {% include 'components/sidebar.html.twig' %}

    <div class="flex flex-1 flex-col lg:ml-72">
        {# Top Navigation #}
        {% include 'components/top-nav.html.twig' %}
<form method="get" class="flex gap-2 items-center mb-6">

    <input type="text"
           name="q"
           value="{{ search|default('') }}"
           placeholder="Rechercher..."
           class="border rounded-lg px-4 py-2 w-72">

    <select name="filter"
            class="border rounded-lg px-3 py-2">

        <option value="all" {{ filter == 'all' ? 'selected' : '' }}>
            Tous
        </option>

        <option value="hopital" {{ filter == 'hopital' ? 'selected' : '' }}>
            Hôpitaux
        </option>

        <option value="rdv" {{ filter == 'rdv' ? 'selected' : '' }}>
            Rendez-vous
        </option>

    </select>

   

</form>

<div class="bg-white rounded-xl p-6 shadow mt-8">
    <h2 class="text-xl font-bold mb-4">Liste des hôpitaux</h2>

    <ul class="space-y-3">
        {% for hopital in hopitaux %}
            <li class="border p-3 rounded-lg">
                <strong>{{ hopital.nom }}</strong><br>
                {{ hopital.adresse }} — {{ hopital.tel }}
            </li>
        {% else %}
            <p>Aucun hôpital trouvé</p>
        {% endfor %}
    </ul>
</div>

        <main class="flex-1 overflow-auto pb-12">
            <div class="mx-auto max-w-7xl space-y-8 p-4 lg:p-8">

                {# Header de la page #}
                <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">
                            <i class="fas fa-hospital-user text-purple-600 mr-3"></i>
                            Tableau de bord Services
                        </h1>
                        <p class="text-gray-600 mt-1">
                            Vue d'ensemble de l'activité médicale
                        </p>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <a href="{{ path('app_rendez_vous_new') }}"
                           class="inline-flex items-center px-5 py-2.5 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition shadow-md">
                            <i class="fas fa-plus mr-2"></i> Nouveau RDV
                        </a>
                        <a href="{{ path('app_rendez_vous_index') }}"
                           class="inline-flex items-center px-5 py-2.5 bg-purple-100 text-purple-700 font-semibold rounded-lg hover:bg-purple-200 transition">
                            <i class="fas fa-calendar-days mr-2"></i> Tous les RDV
                        </a>
                    </div>
                </div>

                {# Messages flash #}
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-5 py-4 rounded-xl" role="alert">
                        <i class="fas fa-check-circle mr-2"></i> {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-5 py-4 rounded-xl" role="alert">
                        <i class="fas fa-exclamation-circle mr-2"></i> {{ message }}
                    </div>
                {% endfor %}

                {# Cartes de statistiques #}
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                    <!-- Médecins -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-500">Médecins</p>
                                <p class="text-3xl font-bold text-gray-900 mt-1">{{ medecin_count }}</p>
                            </div>
                            <div class="bg-blue-100 p-4 rounded-lg">
                                <i class="fas fa-user-md text-blue-600 text-3xl"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Patients -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-500">Patients</p>
                                <p class="text-3xl font-bold text-gray-900 mt-1">{{ patient_count }}</p>
                            </div>
                            <div class="bg-green-100 p-4 rounded-lg">
                                <i class="fas fa-users text-green-600 text-3xl"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Hôpitaux -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-500">Hôpitaux</p>
                                <p class="text-3xl font-bold text-gray-900 mt-1">{{ hopital_count }}</p>
                            </div>
                            <div class="bg-purple-100 p-4 rounded-lg">
                                <i class="fas fa-hospital text-purple-600 text-3xl"></i>
                            </div>
                        </div>
                    </div>

                    <!-- RDV (exemple - tu peux ajouter un count dans le controller si tu veux) -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-500">Rendez-vous</p>
                                <p class="text-3xl font-bold text-gray-900 mt-1">{{ rendezvous|length }}</p>
                            </div>
                            <div class="bg-orange-100 p-4 rounded-lg">
                                <i class="fas fa-calendar-check text-orange-600 text-3xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                {# Tableau des derniers rendez-vous #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="p-6 border-b border-gray-200 flex items-center justify-between bg-gray-50">
                        <div class="flex items-center">
                            <i class="fas fa-calendar-alt text-purple-600 text-2xl mr-3"></i>
                            <div>
                                <h2 class="text-xl font-bold text-gray-900">Derniers Rendez-vous</h2>
                                <p class="text-sm text-gray-600">Aperçu des rendez-vous récents</p>
                            </div>
                        </div>
                        <a href="{{ path('app_rendez_vous_index') }}"
                           class="text-purple-600 hover:text-purple-800 font-medium flex items-center">
                            Voir tous <i class="fas fa-arrow-right ml-2 text-sm"></i>
                        </a>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Médecin</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for rdv in rendezvous %}
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            #{{ rdv.id }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ rdv.patient ? rdv.patient.nom ~ ' ' ~ rdv.patient.prenom : '<span class="text-gray-400">—</span>'|raw }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ rdv.medecin ? rdv.medecin.nom ~ ' ' ~ rdv.medecin.prenom : '<span class="text-gray-400">—</span>'|raw }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ rdv.dateRendezVous ? rdv.dateRendezVous|date('d/m/Y H:i') : '<span class="text-gray-400">—</span>'|raw }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            {% if rdv.statut == 'En attente' %}
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                    En attente
                                                </span>
                                            {% elseif rdv.statut == 'Confirmé' %}
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                    Confirmé
                                                </span>
                                            {% elseif rdv.statut == 'Annulé' %}
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                    Annulé
                                                </span>
                                            {% else %}
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                    {{ rdv.statut }}
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-4">
                                            <a href="{{ path('app_rendez_vous_show', {'id': rdv.id}) }}" class="text-blue-600 hover:text-blue-900" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_rendez_vous_edit', {'id': rdv.id}) }}" class="text-green-600 hover:text-green-900" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button onclick="confirmDelete({{ rdv.id }})" class="text-red-600 hover:text-red-900" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>

                                            {# Formulaire caché de suppression #}
                                            <form id="delete-form-{{ rdv.id }}" method="post" action="{{ path('app_rendez_vous_delete', {'id': rdv.id}) }}" style="display: none;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="px-6 py-16 text-center text-gray-500">
                                            <i class="fas fa-calendar-times text-6xl text-gray-300 mb-4 block"></i>
                                            <p class="text-lg">Aucun rendez-vous enregistré pour le moment</p>
                                            <a href="{{ path('app_rendez_vous_new') }}"
                                               class="mt-6 inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700">
                                                <i class="fas fa-plus mr-2"></i> Créer un rendez-vous
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </main>
    </div>
</div>

<script>
function confirmDelete(id) {
    if (confirm('Voulez-vous vraiment supprimer ce rendez-vous ? Cette action est irréversible.')) {
        document.getElementById('delete-form-' + id).submit();
    }
}
</script>
{% endblock %}