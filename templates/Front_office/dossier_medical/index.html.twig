{% extends 'base.html.twig' %}

{% block title %}Mes Dossiers Médicaux{% endblock %}

{% block body %}
<h1>Mes Dossiers Médicaux</h1>

{% if is_granted('ROLE_MEDECIN') or is_granted('ROLE_ADMIN') %}
    <a href="{{ path('dossier_medical_new') }}" class="btn btn-primary">Créer un nouveau dossier</a>
{% endif %}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Patient</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for dossier in dossiers %}
        <tr>
            <td>{{ dossier.id }}</td>
            <td>{{ dossier.user.email }}</td>
            <td>{{ dossier.dateCreation|date('d/m/Y H:i') }}</td>
            <td>
                <a href="{{ path('dossier_medical_show', {'id': dossier.id}) }}" class="btn btn-info btn-sm">Voir</a>
                <a href="{{ path('dossier_medical_edit', {'id': dossier.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                <form method="post" action="{{ path('dossier_medical_delete', {'id': dossier.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce dossier ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier.id) }}">
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun dossier trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}