{% extends 'base.html.twig' %}

{% block title %}Dashboard Médecin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8 mb-6">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                Bienvenue Dr. {{ user.nom }}
            </h1>
            <p class="text-gray-600">
                Gérez vos consultations et dossiers médicaux
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold">Patients</h3>
                    <i class="fas fa-users text-blue-600 text-2xl"></i>
                </div>
                <p class="text-3xl font-bold text-gray-900">0</p>
                <p class="text-sm text-gray-500 mt-2">Patients suivis</p>
            </div>
            
            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold">Consultations</h3>
                    <i class="fas fa-calendar-check text-green-600 text-2xl"></i>
                </div>
                <p class="text-3xl font-bold text-gray-900">0</p>
                <p class="text-sm text-gray-500 mt-2">Aujourd'hui</p>
            </div>
            
            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold">Dossiers</h3>
                    <i class="fas fa-folder-open text-purple-600 text-2xl"></i>
                </div>
                <p class="text-3xl font-bold text-gray-900">0</p>
                <p class="text-sm text-gray-500 mt-2">À consulter</p>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Actions rapides</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="{{ path('medecin_dossiers_liste') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                    <i class="fas fa-folder-open text-blue-600 text-xl mr-4"></i>
                    <div>
                        <p class="font-semibold">Consulter les dossiers</p>
                        <p class="text-sm text-gray-500">Accéder aux dossiers médicaux</p>
                    </div>
                </a>
                
                <a href="#" 
                   class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                    <i class="fas fa-calendar-plus text-green-600 text-xl mr-4"></i>
                    <div>
                        <p class="font-semibold">Planifier une consultation</p>
                        <p class="text-sm text-gray-500">Ajouter un rendez-vous</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}