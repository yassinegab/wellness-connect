{% extends 'base.html.twig' %}

{% block title %}Inscription - Sosi+{% endblock %}

{% block body %}
<div class="relative min-h-screen flex items-center justify-center overflow-hidden bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
    
    {# Background Elements #}
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
        <div class="absolute top-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-emerald-400/20 blur-[100px] animate-pulse"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-teal-400/20 blur-[100px] animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-[40%] left-[40%] w-[20%] h-[20%] rounded-full bg-blue-400/20 blur-[80px] animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    {# Main Card #}
    <div class="relative z-10 w-full max-w-2xl transform transition-all duration-500">
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] border border-white/50 p-8 sm:p-10">
            
            {# Header #}
            <div class="text-center mb-10">
                <h2 class="text-3xl font-bold tracking-tight text-slate-800 mb-2">Créer un compte</h2>
                <p class="text-slate-500">
                    Déjà membre ?
                    <a href="{{ path('app_login') }}" class="font-bold text-emerald-600 hover:text-emerald-500 transition-colors ml-1">
                        Connectez-vous
                    </a>
                </p>
            </div>

            {# Flash Messages #}
            {% for flash_error in app.flashes('error') %}
                <div class="mb-6 rounded-xl bg-red-50/80 backdrop-blur-sm p-4 border border-red-100 flex items-start gap-3 animate-fadeIn">
                    <i class="fas fa-exclamation-circle text-red-500 mt-0.5"></i>
                    <p class="text-sm font-medium text-red-800">{{ flash_error }}</p>
                </div>
            {% endfor %}

            {# Steps Indicator #}
            <div class="mb-12 relative">
                <div class="absolute left-0 top-1/2 -translate-y-1/2 w-full h-1 bg-slate-200 rounded-full -z-10"></div>
                <div class="absolute left-0 top-1/2 -translate-y-1/2 h-1 bg-emerald-500 rounded-full -z-10 transition-all duration-500" id="progress-bar" style="width: 0%"></div>
                
                <div class="flex justify-between items-center w-full">
                    <!-- Step 1 Indicator -->
                    <div class="flex flex-col items-center gap-2 group cursor-pointer">
                        <div id="dot-1" class="h-10 w-10 rounded-xl bg-emerald-600 text-white flex items-center justify-center text-sm font-bold transition-all duration-300 shadow-lg shadow-emerald-500/30 ring-4 ring-white">
                            1
                        </div>
                        <span class="text-xs font-bold text-slate-700 tracking-wide uppercase">Compte</span>
                    </div>

                    <!-- Step 2 Indicator -->
                    <div class="flex flex-col items-center gap-2 group cursor-pointer">
                        <div id="dot-2" class="h-10 w-10 rounded-xl bg-white text-slate-400 flex items-center justify-center text-sm font-bold transition-all duration-300 border-2 border-slate-200 ring-4 ring-white">
                            2
                        </div>
                        <span class="text-xs font-bold text-slate-400 tracking-wide uppercase">Profil</span>
                    </div>

                    <!-- Step 3 Indicator -->
                    <div class="flex flex-col items-center gap-2 group cursor-pointer">
                        <div id="dot-3" class="h-10 w-10 rounded-xl bg-white text-slate-400 flex items-center justify-center text-sm font-bold transition-all duration-300 border-2 border-slate-200 ring-4 ring-white">
                            3
                        </div>
                        <span class="text-xs font-bold text-slate-400 tracking-wide uppercase">Validation</span>
                    </div>
                </div>
            </div>

            <form method="post" action="{{ path('app_register') }}" id="register-form" class="mt-8">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

                {# ETAPE 1 : Informations personnelles #}
                <div class="form-step space-y-6 animate-fadeIn" id="step-1">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div>
                            <label for="nom" class="block text-sm font-semibold text-slate-700 mb-2">Nom</label>
                            <input id="nom" name="nom" type="text" required 
                                   class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="Doe">
                        </div>
                        <div>
                            <label for="prenom" class="block text-sm font-semibold text-slate-700 mb-2">Prénom</label>
                            <input id="prenom" name="prenom" type="text" required 
                                   class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="John">
                        </div>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">Email</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-emerald-600 text-slate-400">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <input id="email" name="email" type="email" autocomplete="email" required 
                                   class="block w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="john@example.com">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div>
                            <label for="password" class="block text-sm font-semibold text-slate-700 mb-2">Mot de passe</label>
                            <div class="relative group">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-emerald-600 text-slate-400">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input id="password" name="plainPassword" type="password" required 
                                       class="block w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                       placeholder="••••••••">
                            </div>
                        </div>
                        <div>
                            <label for="confirm_password" class="block text-sm font-semibold text-slate-700 mb-2">Confirmation</label>
                            <div class="relative group">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-emerald-600 text-slate-400">
                                    <i class="fas fa-check-double"></i>
                                </div>
                                <input id="confirm_password" name="confirm_password" type="password" required 
                                       class="block w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                       placeholder="••••••••">
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="telephone" class="block text-sm font-semibold text-slate-700 mb-2">Téléphone</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-emerald-600 text-slate-400">
                                <i class="fas fa-phone"></i>
                            </div>
                            <input id="telephone" name="telephone" type="tel" 
                                   class="block w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="+216 XX XXX XXX">
                        </div>
                    </div>

                    <div>
                        <label for="role" class="block text-sm font-semibold text-slate-700 mb-2">Rôle</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none transition-colors group-focus-within:text-emerald-600 text-slate-400">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <select id="role" name="role" required 
                                    class="block w-full pl-11 pr-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm appearance-none cursor-pointer">
                                <option value="">Sélectionnez votre rôle</option>
                                <option value="ROLE_PATIENT">Patient (Standard)</option>
                                <option value="ROLE_MEDECIN">Médecin / Praticien</option>
                                <option value="ROLE_ADMIN">Administrateur</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none text-slate-400">
                                <i class="fas fa-chevron-down text-xs"></i>
                            </div>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="button" onclick="validateAndNext(1)" class="group relative w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl text-sm font-bold text-white bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 shadow-lg shadow-emerald-500/30 transition-all hover:shadow-emerald-500/40 hover:-translate-y-0.5">
                            Suivant
                            <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                        </button>
                    </div>
                </div>

                {# ETAPE 2 : Informations physiques #}
                <div class="form-step hidden space-y-6 animate-fadeIn" id="step-2">
                    <div class="bg-blue-50/80 backdrop-blur-sm p-4 rounded-xl border border-blue-100 mb-6 flex items-start gap-3">
                        <i class="fas fa-info-circle text-blue-500 mt-0.5"></i>
                        <p class="text-sm text-blue-800">
                            Ces informations nous aident à personnaliser votre expérience de santé.
                        </p>
                    </div>

                    <div class="grid grid-cols-2 gap-5">
                        <div>
                            <label for="age" class="block text-sm font-semibold text-slate-700 mb-2">Âge</label>
                            <input id="age" name="age" type="number" 
                                   class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="25">
                        </div>
                        <div>
                            <label for="sexe" class="block text-sm font-semibold text-slate-700 mb-2">Sexe</label>
                            <div class="relative">
                                <select id="sexe" name="sexe" 
                                        class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm appearance-none cursor-pointer">
                                    <option value="">Choisir...</option>
                                    <option value="Homme">Homme</option>
                                    <option value="Femme">Femme</option>
                                </select>
                                <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none text-slate-400">
                                    <i class="fas fa-chevron-down text-xs"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-5">
                        <div>
                            <label for="poids" class="block text-sm font-semibold text-slate-700 mb-2">Poids (kg)</label>
                            <input id="poids" name="poids" type="number" step="0.1" 
                                   class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="70.5">
                        </div>
                        <div>
                            <label for="taille" class="block text-sm font-semibold text-slate-700 mb-2">Taille (cm)</label>
                            <input id="taille" name="taille" type="number" step="0.1" 
                                   class="block w-full px-4 py-3 bg-white/50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all shadow-sm"
                                   placeholder="175">
                        </div>
                    </div>

                    <div class="relative flex items-center p-4 border border-slate-200 rounded-xl bg-white/30 hover:bg-white/50 transition-colors cursor-pointer" onclick="document.getElementById('is_handicapped').click()">
                        <div class="flex h-5 items-center">
                            <input id="is_handicapped" name="is_handicapped" type="checkbox" class="h-5 w-5 rounded border-slate-300 text-emerald-600 focus:ring-emerald-500/50">
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="is_handicapped" class="font-bold text-slate-700 select-none cursor-pointer">Je suis en situation de handicap</label>
                            <p class="text-slate-500 text-xs mt-0.5">Cochez cette case si vous avez besoin d'une assistance particulière.</p>
                        </div>
                    </div>

                    <div class="flex gap-4 pt-4">
                        <button type="button" onclick="showStep(1)" class="flex-1 justify-center rounded-xl border border-slate-200 bg-white py-3.5 px-4 text-sm font-bold text-slate-700 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-all">
                            Retour
                        </button>
                        <button type="button" onclick="validateAndNext(2)" class="flex-1 justify-center rounded-xl border border-transparent bg-gradient-to-r from-emerald-600 to-teal-600 py-3.5 px-4 text-sm font-bold text-white shadow-lg shadow-emerald-500/30 hover:from-emerald-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-all hover:shadow-emerald-500/40 hover:-translate-y-0.5">
                            Suivant
                        </button>
                    </div>
                </div>

                {# ETAPE 3 : Confirmation #}
                <div class="form-step hidden space-y-6 animate-fadeIn" id="step-3">
                    <div class="rounded-xl bg-slate-50/80 backdrop-blur-sm p-6 border border-slate-200">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-emerald-100 text-emerald-600">
                                    <i class="fas fa-shield-alt text-lg"></i>
                                </div>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-base font-bold text-slate-900">Confidentialité & Sécurité</h3>
                                <div class="mt-2 text-sm text-slate-500 leading-relaxed">
                                    <p>Vos données de santé sont cryptées et protégées conformément aux normes en vigueur. Sosi+ s'engage à ne jamais partager vos informations personnelles sans votre consentement explicite.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="relative flex items-center p-4 border border-slate-200 rounded-xl bg-white/30 hover:bg-white/50 transition-colors">
                        <div class="flex h-5 items-center">
                            <input id="terms" name="terms" type="checkbox" required class="h-5 w-5 rounded border-slate-300 text-emerald-600 focus:ring-emerald-500/50">
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="terms" class="font-medium text-slate-700 select-none">J’accepte les <a href="#" class="text-emerald-600 hover:text-emerald-500 font-bold hover:underline">conditions d’utilisation</a> et la <a href="#" class="text-emerald-600 hover:text-emerald-500 font-bold hover:underline">politique de confidentialité</a>.</label>
                        </div>
                    </div>

                    <div class="flex gap-4 pt-4">
                        <button type="button" onclick="showStep(2)" class="flex-1 justify-center rounded-xl border border-slate-200 bg-white py-3.5 px-4 text-sm font-bold text-slate-700 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-all">
                            Retour
                        </button>
                        <button type="submit" class="flex-1 justify-center rounded-xl border border-transparent bg-gradient-to-r from-emerald-600 to-teal-600 py-3.5 px-4 text-sm font-bold text-white shadow-lg shadow-emerald-500/30 hover:from-emerald-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-all hover:shadow-emerald-500/40 hover:-translate-y-0.5">
                            Créer mon compte
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        {# Copyright #}
        <div class="mt-8 text-center text-xs text-slate-400">
            &copy; {{ "now"|date("Y") }} Sosi+ HealthCare. Tous droits réservés.
        </div>
    </div>
</div>

<script>
    function validateAndNext(currentStep) {
        const currentStepDiv = document.getElementById('step-' + currentStep);
        const inputs = Array.from(currentStepDiv.querySelectorAll('input, select'));
        
        // Check standard validation first
        for (const input of inputs) {
            if (!input.checkValidity()) {
                input.reportValidity();
                return;
            }
        }
        
        // Custom validation for Step 1
        if (currentStep === 1) {
            const pwd = document.getElementById('password');
            const confirm = document.getElementById('confirm_password');
            
            if (pwd.value !== confirm.value) {
                confirm.setCustomValidity("Les mots de passe ne correspondent pas");
                confirm.reportValidity();
                confirm.addEventListener('input', function() { 
                    this.setCustomValidity(''); 
                }, {once: true});
                return;
            }
            
            // Configure requirements for Step 2 based on Role
            const role = document.getElementById('role').value;
            const isHealthRequired = (role !== 'ROLE_ADMIN');
            
            ['age', 'poids', 'taille', 'sexe'].forEach(id => {
                const el = document.getElementById(id);
                if (el) el.required = isHealthRequired;
            });
        }
        
        // If all good, proceed
        showStep(currentStep + 1);
    }

    function showStep(stepNumber) {
        // Hide all steps
        document.querySelectorAll('.form-step').forEach(step => {
            step.classList.add('hidden');
        });
        
        // Show current step
        document.getElementById('step-' + stepNumber).classList.remove('hidden');
        
        // Update dots and progress
        const progressBar = document.getElementById('progress-bar');
        
        // Update Progress Bar
        if (stepNumber === 1) progressBar.style.width = '0%';
        if (stepNumber === 2) progressBar.style.width = '50%';
        if (stepNumber === 3) progressBar.style.width = '100%';

        for (let i = 1; i <= 3; i++) {
            const dot = document.getElementById('dot-' + i);
            const label = dot.nextElementSibling;
            
            // Reset base classes
            dot.className = 'h-10 w-10 rounded-xl flex items-center justify-center text-sm font-bold transition-all duration-300 ring-4 ring-white';
            
            if (i < stepNumber) {
                // Completed steps
                dot.classList.add('bg-emerald-600', 'text-white');
                dot.innerHTML = '<i class="fas fa-check"></i>';
                label.classList.remove('text-slate-400');
                label.classList.add('text-emerald-600');
            } else if (i === stepNumber) {
                // Current step
                dot.classList.add('bg-emerald-600', 'text-white', 'shadow-lg', 'shadow-emerald-500/30');
                dot.innerHTML = i;
                label.classList.remove('text-slate-400');
                label.classList.add('text-slate-800');
            } else {
                // Future steps
                dot.classList.add('bg-white', 'text-slate-400', 'border-2', 'border-slate-200');
                dot.innerHTML = i;
                label.classList.add('text-slate-400');
                label.classList.remove('text-slate-800', 'text-emerald-600');
            }
        }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        showStep(1);
    });
</script>
{% endblock %}
