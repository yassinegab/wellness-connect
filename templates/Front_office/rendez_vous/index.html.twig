{% extends 'base.html.twig' %}

{% block title %}Liste des Rendez-vous{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-50">

    <div class="flex flex-1 flex-col">

        {# Top Navigation #}
        {% include 'components/top-nav.html.twig' %}

        <main class="flex-1 overflow-auto">
            <div class="mx-auto max-w-7xl space-y-6 p-4 lg:p-8">

                {# Header #}
                <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">
                            <i class="fas fa-calendar-alt text-purple-600 mr-2"></i>
                            Mes Rendez-vous
                        </h1>
                        <p class="text-gray-600 mt-2">
                            Gérez tous vos rendez-vous médicaux
                        </p>
                    </div>
                    <a href="{{ path('app_rendez_vous_new') }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-md">
                        <i class="fas fa-plus mr-2"></i>
                        Nouveau Rendez-vous
                    </a>
                </div>

                {# Flash Messages #}
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
                        <i class="fas fa-check-circle mr-2"></i>
                        {{ message }}
                    </div>
                {% endfor %}

                {# Table des rendez-vous #}
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ID
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Patient
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Médecin
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Hôpital
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Date
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Type
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Statut
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for rdv in rendez_vous %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            #{{ rdv.id }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.patient %}
                                                <i class="fas fa-user text-blue-500 mr-1"></i>
                                                {{ rdv.patient.nom }} {{ rdv.patient.prenom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.medecin %}
                                                <i class="fas fa-user-md text-green-500 mr-1"></i>
                                                Dr. {{ rdv.medecin.nom }} {{ rdv.medecin.prenom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.hopital %}
                                                <i class="fas fa-hospital text-purple-500 mr-1"></i>
                                                {{ rdv.hopital.nom }}
                                            {% else %}
                                                <span class="text-gray-400">Non assigné</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {% if rdv.dateRendezVous %}
                                                <i class="fas fa-calendar text-orange-500 mr-1"></i>
                                                {{ rdv.dateRendezVous|date('d/m/Y H:i') }}
                                            {% else %}
                                                <span class="text-gray-400">Non définie</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if rdv.typeConsultation == 'Présentiel' %}
                                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-hospital mr-1"></i>Présentiel
                                                </span>
                                            {% elseif rdv.typeConsultation == 'Téléconsultation' %}
                                                <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-video mr-1"></i>Téléconsultation
                                                </span>
                                            {% elseif rdv.typeConsultation == 'Urgence' %}
                                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-ambulance mr-1"></i>Urgence
                                                </span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-semibold rounded-full">
                                                    {{ rdv.typeConsultation }}
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if rdv.statut == 'En attente' %}
                                                <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-clock mr-1"></i>En attente
                                                </span>
                                            {% elseif rdv.statut == 'Confirmé' %}
                                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-check mr-1"></i>Confirmé
                                                </span>
                                            {% elseif rdv.statut == 'Annulé' %}
                                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-times mr-1"></i>Annulé
                                                </span>
                                            {% elseif rdv.statut == 'Terminé' %}
                                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-semibold rounded-full">
                                                    <i class="fas fa-check-double mr-1"></i>Terminé
                                                </span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-semibold rounded-full">
                                                    {{ rdv.statut }}
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                            <a href="{{ path('app_rendez_vous_show', {'id': rdv.id}) }}" class="text-blue-600 hover:text-blue-900" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_rendez_vous_edit', {'id': rdv.id}) }}" class="text-green-600 hover:text-green-900" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button onclick="confirmDelete({{ rdv.id }})" class="text-red-600 hover:text-red-900" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <form id="delete-form-{{ rdv.id }}" method="post" action="{{ path('app_rendez_vous_delete', {'id': rdv.id}) }}" style="display: none;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="px-6 py-12 text-center">
                                            <div class="flex flex-col items-center">
                                                <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
                                                <p class="text-gray-500 text-lg mb-4">Aucun rendez-vous pour le moment</p>
                                                <a href="{{ path('app_rendez_vous_new') }}" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-md">
                                                    <i class="fas fa-plus mr-2"></i>
                                                    Créer votre premier rendez-vous
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Statistiques rapides #}
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-clock text-yellow-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">En attente</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|filter(rdv => rdv.statut == 'En attente')|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-check text-green-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Confirmés</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|filter(rdv => rdv.statut == 'Confirmé')|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-times text-red-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Annulés</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|filter(rdv => rdv.statut == 'Annulé')|length }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-calendar-alt text-blue-600 text-xl"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Total</p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {{ rendez_vous|length }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

        {# Footer #}
        <footer class="border-t border-gray-200 bg-white mt-8">
            <div class="max-w-7xl mx-auto px-4 lg:px-8 py-6">
                <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="flex items-center gap-2 text-orange-600">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span class="text-sm font-medium">SmartHealth AI - Gestion des rendez-vous médicaux</span>
                    </div>
                    <div class="text-sm text-gray-500">
                        © {{ "now"|date("Y") }} SmartHealth AI. Tous droits réservés.
                    </div>
                </div>
            </div>
        </footer>

    </div>
</div>

<script>
function confirmDelete(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce rendez-vous ?')) {
        document.getElementById('delete-form-' + id).submit();
    }
}
</script>
{# Flash Messages - Erreurs #}
{% for message in app.flashes('error') %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
        <i class="fas fa-exclamation-circle mr-2"></i>
        {{ message }}
    </div>
{% endfor %}
{% endblock %}