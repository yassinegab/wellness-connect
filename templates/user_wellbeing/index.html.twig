{% extends 'base.html.twig' %}

{% block title %}My Well-Being Data{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        .prose { max-width: none; }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col" x-data="{ sidebarOpen: false }">

    {# Top Navigation #}
    {% include 'components/top-nav.html.twig' %}

    {# Page Content #}
    <main class="flex-1 w-full">
        <div class="mx-auto max-w-7xl p-6 lg:p-10 space-y-8">

            {# AI Wellness Insight Card — Compact & Collapsible #}
            {% if aiTrends is defined and aiTrends %}
                <div class="bg-gradient-to-r from-indigo-800 to-indigo-700 rounded-2xl px-6 py-4 text-white shadow-lg relative overflow-hidden border border-indigo-600/50"
                     x-data="{ expanded: false }">
                    <div class="relative z-10 flex items-center justify-between gap-4">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-indigo-500/30 flex items-center justify-center border border-indigo-400/30 flex-shrink-0">
                                <i class="fas fa-brain text-indigo-200 text-sm"></i>
                            </div>
                            <h2 class="text-xs font-black uppercase tracking-widest text-indigo-200">Aperçu Bien-être AI</h2>
                        </div>
                        <button @click="expanded = !expanded" class="text-indigo-300 hover:text-white transition-colors text-xs font-bold flex items-center gap-1">
                            <span x-text="expanded ? 'Réduire' : 'Voir plus'"></span>
                            <i class="fas fa-chevron-down text-[10px] transition-transform" :class="expanded && 'rotate-180'"></i>
                        </button>
                    </div>
                    <div class="relative z-10 mt-3" :class="expanded ? '' : 'max-h-20 overflow-hidden'"
                         :style="!expanded && 'mask-image: linear-gradient(to bottom, black 40%, transparent 100%); -webkit-mask-image: linear-gradient(to bottom, black 40%, transparent 100%);'">
                        <p class="text-sm leading-relaxed text-indigo-100">{{ aiTrends|nl2br }}</p>
                    </div>
                </div>
            {% endif %}

                <div class="flex items-center justify-between mb-6">
                    <h1 class="text-2xl font-bold">My Well-Being Data</h1>
                    <a href="{{ path('user_wellbeing_new') }}"
                       class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 flex items-center gap-2">
                        <i class="fas fa-plus"></i>
                        Add New Data
                    </a>
                </div>

                {# Cards Grid #}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for data in dataList %}
                        {% set lastPrediction = data.stressPredictions.last %}
                        {% set stressLevel = lastPrediction ? lastPrediction.predictedStressType : 'N/A' %}
                        {% set stressPercent = lastPrediction ? lastPrediction.confidenceScore : 0 %}
                        {% set stressColor = stressLevel == 'Low' ? 'bg-emerald-500' 
                                         : stressLevel == 'Moderate' ? 'bg-amber-500' 
                                         : stressLevel == 'High' ? 'bg-rose-500' 
                                         : 'bg-gray-300' %}

                        <div class="rounded-xl shadow-lg p-6 flex flex-col justify-between animate-fadeIn hover:scale-105 transition-transform duration-300 bg-white">
                            
                            <div class="flex justify-between items-center mb-4">
                                <p class="text-gray-500 text-sm">Date</p>
                                <p class="text-gray-900 font-semibold">{{ data.createdAt|date('Y-m-d H:i') }}</p>
                            </div>

                            {# Stress Progress Bar #}
                            <div class="mb-4">
                                <div class="w-full h-6 bg-gray-200 rounded-full overflow-hidden">
                                    <div class="{{ stressColor }} h-6 rounded-full" style="width: {{ stressPercent }}%; transition: width 0.5s;"></div>
                                </div>
                                <p class="mt-1 text-sm font-medium text-gray-700">Stress Level: {{ stressLevel }}</p>
                            </div>

                            <div class="mt-auto flex justify-between items-center">
                                {% if data.user == app.user %}
                                    <a href="{{ path('user_wellbeing_edit', {'id': data.id}) }}"
                                       class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-800 font-medium text-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                {% else %}
                                    <span class="inline-flex items-center gap-1 text-gray-400 font-medium text-xs bg-gray-100 px-2 py-1 rounded">
                                        <i class="fas fa-lock"></i> Demo
                                    </span>
                                {% endif %}

                                <div class="flex items-center gap-3">

                                    <button 
                                        @click="showAI('{{ stressLevel|e('js') }}', '{{ stressPercent|number_format(1) }}', '{{ lastPrediction.recommendation|default('No analysis available.')|e('js') }}')"
                                        class="inline-flex items-center gap-1 bg-indigo-600 text-white px-3 py-1.5 rounded hover:bg-indigo-700 text-sm transition-colors shadow-sm"
                                    >
                                        <i class="fas fa-robot"></i> View AI
                                    </button>

                                    {# Delete Icon - Only for owner #}
                                    {% if data.user == app.user %}
                                        <form method="post"
                                              action="{{ path('user_wellbeing_delete', {'id': data.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this data?');">

                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ data.id) }}">

                                            <button class="text-red-600 hover:text-red-800 text-lg">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}

                                </div>
                            </div>

                        </div>
                    {% else %}
                        <p class="text-gray-500 col-span-full text-center">No records found.</p>
                    {% endfor %}
                </div>

                <!-- Detailed Analysis Section -->
                <div class="mt-12">
                     <div class="bg-indigo-600 rounded-2xl p-6 text-white shadow-lg shadow-indigo-200 flex items-center justify-between mb-8 group overflow-hidden relative">
                        <div class="relative z-10">
                            <h2 class="text-xl font-bold mb-1">Detailed Analysis Available</h2>
                            <p class="text-indigo-100 text-sm">Visualize your well-being trends over time.</p>
                        </div>
                        <a href="{{ path('user_wellbeing_statistics') }}" class="relative z-10 bg-white text-indigo-600 px-6 py-3 rounded-xl font-bold hover:bg-indigo-50 transition-all transform group-hover:scale-105">
                            View Stress Statistics <i class="fas fa-chevron-right ml-2 text-xs"></i>
                        </a>
                        <!-- Decor -->
                        <div class="absolute -right-8 -bottom-8 w-32 h-32 bg-white/10 rounded-full blur-2xl group-hover:scale-150 transition-transform"></div>
                    </div>
                </div>

                {# Meals Section #}
                <div class="mt-12">
                     <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold">My Meals</h2>
                        <a href="{{ path('user_meal_new') }}" class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700 flex items-center gap-2 transition-colors">
                             <i class="fas fa-utensils"></i> Add Meal
                        </a>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for meal in meals %}
                            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                {% if meal.imageName %}
                                    <div class="h-48 overflow-hidden relative group">
                                         <img src="{{ asset('uploads/meals/' ~ meal.imageName) }}" alt="Meal" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500">
                                         <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-opacity"></div>
                                    </div>
                                {% else %}
                                    <div class="h-48 bg-gray-100 flex items-center justify-center text-gray-400">
                                        <i class="fas fa-image text-3xl"></i>
                                    </div>
                                {% endif %}

                                <div class="p-5">
                                    <div class="flex justify-between items-start mb-3">
                                        <div class="text-xs text-gray-500 font-medium bg-gray-100 px-2 py-1 rounded">
                                            {{ meal.createAt|date('M d, Y') }}
                                        </div>
                                    </div>

                                    <p class="text-gray-800 font-medium mb-4 line-clamp-2 min-h-[3rem]">
                                        {{ meal.description }}
                                    </p>

                                    <div class="flex items-center justify-between mt-4 border-t pt-4">
                                        <a href="{{ path('user_meal_show', {'id': meal.id}) }}" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm flex items-center gap-1">
                                            <i class="fas fa-robot"></i> View AI
                                        </a>
                                        
                                        <div class="flex items-center gap-2">
                                            <a href="{{ path('user_meal_edit', {'id': meal.id}) }}" class="text-gray-400 hover:text-blue-600 transition-colors">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('user_meal_delete', {'id': meal.id}) }}" onsubmit="return confirm('Delete this meal?');" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal.id) }}">
                                                <button class="text-gray-400 hover:text-red-600 transition-colors">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                             <div class="col-span-full text-center py-10 bg-white rounded-xl shadow-sm border border-gray-100">
                                <i class="fas fa-utensils text-4xl text-gray-300 mb-3 block"></i>
                                <p class="text-gray-500">No meals logged yet. Start tracking your nutrition!</p>
                             </div>
                        {% endfor %}
                    </div>
                </div>

                {# Journal Section #}
                <div class="mt-12 mb-12">
                     <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold">My Journal</h2>
                        <a href="{{ path('user_journal_index') }}" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700 flex items-center gap-2 transition-colors">
                             <i class="fas fa-book"></i> Open Journal
                        </a>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for journal in journals %}
                            <div class="bg-white rounded-xl shadow-lg border-l-4 border-amber-400 p-6 hover:shadow-xl transition-shadow duration-300 flex flex-col justify-between">
                                <div>
                                    <div class="flex justify-between items-start mb-4">
                                        <div class="text-xs text-gray-500 font-medium bg-gray-100 px-2 py-1 rounded">
                                            {{ journal.createdAt|date('M d, Y') }}
                                        </div>
                                        {% if journal.detectedEmotion %}
                                            <span class="text-xs font-bold px-2 py-1 rounded-full bg-amber-100 text-amber-700 capitalize">
                                                <i class="fas fa-face-smile mr-1"></i> {{ journal.detectedEmotion }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    <p class="text-gray-700 leading-relaxed line-clamp-4 mb-6 italic">
                                        "{{ journal.content }}"
                                    </p>
                                </div>

                                <div class="flex items-center justify-end border-t pt-4">
                                    <form method="post" action="{{ path('user_journal_delete', {'id': journal.id}) }}" onsubmit="return confirm('Delete this entry?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ journal.id) }}">
                                        <button class="text-gray-400 hover:text-red-600 transition-colors">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% else %}
                             <div class="col-span-full text-center py-10 bg-white rounded-xl shadow-sm border border-gray-100">
                                <i class="fas fa-book text-4xl text-gray-300 mb-3 block"></i>
                                <p class="text-gray-500">Your journal is empty. Reflect on your day!</p>
                             </div>
                        {% endfor %}
                    </div>
                </div>

        </div>
    </main>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function showAI(type, score, recommendation) {
            Swal.fire({
                title: `<div class="text-2xl font-bold mb-2">AI Stress Analysis</div>`,
                html: `
                    <div class="text-left space-y-4">
                        <div class="flex items-center justify-between bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <div>
                                <p class="text-xs text-gray-500 uppercase font-bold tracking-wider">Predicted Level</p>
                                <p class="text-xl font-bold ${type === 'High' ? 'text-red-600' : type === 'Moderate' ? 'text-orange-600' : 'text-emerald-600'}">${type}</p>
                            </div>
                            <div class="text-right">
                                <p class="text-xs text-gray-500 uppercase font-bold tracking-wider">Stress Score</p>
                                <p class="text-xl font-bold text-indigo-600">${score}%</p>
                            </div>
                        </div>
                        <div class="prose prose-sm max-w-none">
                            <p class="text-xs text-gray-500 uppercase font-bold tracking-wider mb-2">Recommendations</p>
                            <div class="bg-indigo-50/50 p-4 rounded-xl border border-indigo-100 text-gray-700 leading-relaxed">
                                ${ (recommendation || 'No recommendations provided.').replace(/\n/g, '<br>') }
                            </div>
                        </div>
                    </div>
                `,
                showCloseButton: true,
                showConfirmButton: false,
                width: '600px',
                customClass: {
                    container: 'font-sans',
                    popup: 'rounded-2xl',
                }
            });
        }
    </script>

    {# Floating Chatbot Bubble #}
    <div x-data="chatBubble()" class="fixed bottom-6 right-6 z-50" x-cloak>
        {# Chat Window #}
        <div x-show="open" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 scale-90 translate-y-4" x-transition:enter-end="opacity-100 scale-100 translate-y-0"
             x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-90 translate-y-4"
             class="mb-4 w-80 sm:w-96 bg-white rounded-2xl shadow-2xl border border-slate-200 overflow-hidden flex flex-col" style="height: 480px;">
            
            {# Header #}
            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-4 py-3 flex items-center justify-between flex-shrink-0">
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center">
                        <i class="fas fa-brain text-white text-sm"></i>
                    </div>
                    <div>
                        <h3 class="text-white font-bold text-sm">Coach Bien-être</h3>
                        <p class="text-indigo-200 text-[10px]">Spécialisé santé mentale</p>
                    </div>
                </div>
                <button @click="open = false" class="text-white/70 hover:text-white transition-colors">
                    <i class="fas fa-xmark text-lg"></i>
                </button>
            </div>

            {# Messages #}
            <div class="flex-1 overflow-y-auto p-4 space-y-3 bg-slate-50" x-ref="chatMessages">
                <template x-if="messages.length === 0">
                    <div class="text-center py-8">
                        <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-comment-dots text-indigo-500"></i>
                        </div>
                        <p class="text-slate-500 text-sm">Comment vous sentez-vous aujourd'hui ?</p>
                    </div>
                </template>
                <template x-for="(msg, i) in messages" :key="i">
                    <div :class="msg.role === 'user' ? 'flex justify-end' : 'flex justify-start'">
                        <div :class="msg.role === 'user' 
                            ? 'bg-indigo-600 text-white rounded-2xl rounded-br-md px-3 py-2 max-w-[80%] text-sm' 
                            : 'bg-white text-slate-700 rounded-2xl rounded-bl-md px-3 py-2 max-w-[80%] text-sm shadow-sm border border-slate-100'"
                            x-html="msg.content.replace(/\n/g, '<br>')">
                        </div>
                    </div>
                </template>
                <template x-if="loading">
                    <div class="flex justify-start">
                        <div class="bg-white rounded-2xl rounded-bl-md px-4 py-3 shadow-sm border border-slate-100">
                            <div class="flex gap-1">
                                <span class="w-2 h-2 rounded-full bg-slate-300 animate-bounce" style="animation-delay: 0s"></span>
                                <span class="w-2 h-2 rounded-full bg-slate-300 animate-bounce" style="animation-delay: 0.15s"></span>
                                <span class="w-2 h-2 rounded-full bg-slate-300 animate-bounce" style="animation-delay: 0.3s"></span>
                            </div>
                        </div>
                    </div>
                </template>
            </div>

            {# Input #}
            <div class="p-3 border-t border-slate-200 bg-white flex-shrink-0">
                <form @submit.prevent="sendMessage" class="flex gap-2">
                    <input x-model="newMessage" type="text" placeholder="Écrivez ici..." 
                        class="flex-1 rounded-xl border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/30 focus:border-indigo-400"
                        :disabled="loading">
                    <button type="submit" :disabled="loading || !newMessage.trim()" 
                        class="w-9 h-9 rounded-xl bg-indigo-600 text-white flex items-center justify-center hover:bg-indigo-700 transition-colors disabled:opacity-40">
                        <i class="fas fa-paper-plane text-xs"></i>
                    </button>
                </form>
            </div>
        </div>

        {# Floating Button #}
        <button @click="open = !open" 
            class="w-14 h-14 rounded-full bg-gradient-to-br from-indigo-600 to-purple-600 text-white shadow-xl hover:shadow-2xl hover:scale-105 active:scale-95 transition-all flex items-center justify-center relative">
            <i class="fas fa-brain text-xl" x-show="!open"></i>
            <i class="fas fa-xmark text-xl" x-show="open"></i>
            <span x-show="!open && messages.length === 0" class="absolute -top-1 -right-1 w-4 h-4 bg-rose-500 rounded-full border-2 border-white animate-pulse"></span>
        </button>
    </div>

    <script>
        function chatBubble() {
            return {
                open: false,
                messages: [],
                newMessage: '',
                loading: false,
                async sendMessage() {
                    if (!this.newMessage.trim() || this.loading) return;
                    const text = this.newMessage.trim();
                    this.messages.push({ role: 'user', content: text });
                    this.newMessage = '';
                    this.loading = true;
                    this.$nextTick(() => {
                        this.$refs.chatMessages.scrollTop = this.$refs.chatMessages.scrollHeight;
                    });
                    try {
                        const formData = new FormData();
                        formData.append('message', text);

                        const res = await fetch('{{ path("user_chatbot_send") }}', {
                            method: 'POST',
                            body: formData
                        });
                        const data = await res.json();
                        this.messages.push({ role: 'assistant', content: data.message || 'Désolé, une erreur est survenue.' });
                    } catch (e) {
                        this.messages.push({ role: 'assistant', content: 'Erreur de connexion. Réessayez.' });
                    }
                    this.loading = false;
                    this.$nextTick(() => {
                        this.$refs.chatMessages.scrollTop = this.$refs.chatMessages.scrollHeight;
                    });
                }
            }
        }
    </script>
{% endblock %}
