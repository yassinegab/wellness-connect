{% block javascripts %}
{{ parent() }}
<script>
    // Animation de la barre de risque
    document.addEventListener('DOMContentLoaded', function() {
        const riskFill = document.querySelector('.risk-fill');
        if (riskFill) {
            setTimeout(() => {
                riskFill.style.width = riskFill.style.width;
            }, 100);
        }

        // S√©lection des options de consultation
        const consultationCards = document.querySelectorAll('.consultation-card');
        consultationCards.forEach(card => {
            card.addEventListener('click', function() {
                consultationCards.forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        // Upload de fichiers
        const fileInput = document.getElementById('fileInput');
        if (fileInput) {
            fileInput.addEventListener('change', function() {
                const files = this.files;
                if (files.length > 0) {
                    alert(`${files.length} fichier(s) s√©lectionn√©(s) pour analyse IA`);
                    // Ici vous pouvez ajouter l'upload r√©el vers votre backend
                }
            });
        }
    });
</script>
