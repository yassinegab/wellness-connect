{% extends 'base.html.twig' %}

{% block title %}Mon Dossier Médical{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Mon Dossier Médical</h1>
            <p class="mt-2 text-gray-600">Bienvenue, {{ user.prenom }} {{ user.nom }}</p>
        </div>

        {% if dossier %}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Info Personnelle -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Informations Physiques</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between border-b pb-2">
                            <span class="text-gray-500">Age</span>
                            <span class="font-medium">{{ user.age }} ans</span>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <span class="text-gray-500">Poids</span>
                            <span class="font-medium">{{ user.poids }} kg</span>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <span class="text-gray-500">Taille</span>
                            <span class="font-medium">{{ user.taille }} cm</span>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <span class="text-gray-500">Sexe</span>
                            <span class="font-medium">{{ user.sexe }}</span>
                        </div>
                    </div>
                </div>

                <!-- Antécédents & Allergies -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Médical</h2>
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Allergies</h3>
                            <p class="mt-1 text-gray-900">{{ dossier.allergies|default('Aucune') }}</p>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Antécédents</h3>
                            <p class="mt-1 text-gray-900">{{ dossier.antecedentsMedicaux|default('Aucun') }}</p>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Maladies Chroniques</h3>
                            <p class="mt-1 text-gray-900">{{ dossier.maladiesChroniques|default('Aucune') }}</p>
                        </div>
                    </div>
                </div>

                <!-- Traitements -->
                <div class="bg-white rounded-xl shadow-sm p-6 md:col-span-2">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Traitements en cours</h2>
                    <p class="text-gray-900 whitespace-pre-line">{{ dossier.traitementsEnCours|default('Aucun traitement en cours') }}</p>
                </div>
            </div>
        {% else %}
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
                <div class="flex">
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            Aucun dossier médical trouvé. Veuillez contacter votre médecin.
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
